<?xml version="1.0" encoding="utf-8"?><!--显示一张图片-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/DIMEN_10DP"
        android:elevation="@dimen/DIMEN_05DP"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_200DP">

                <ImageView
                    android:id="@+id/iv_image_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:src="@mipmap/icon" />

                <TextView
                    android:id="@+id/tv_image_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/DIMEN_10DP"
                    android:background="@drawable/common_shape_corners_solid_mask"
                    android:includeFontPadding="false"
                    android:paddingBottom="@dimen/DIMEN_3DP"
                    android:paddingLeft="@dimen/DIMEN_10DP"
                    android:paddingRight="@dimen/DIMEN_10DP"
                    android:paddingTop="@dimen/DIMEN_3DP"
                    android:textColor="@color/white"
                    android:textSize="@dimen/DIMEN_8SP"
                    tools:text="13图" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_image_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/DIMEN_10DP"
                android:textColor="@color/black"
                android:textSize="@dimen/common_article_title"
                tools:text="001A航母下水一周年：主錨喷水央视直播摄像机就位" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/DIMEN_30DP"
                android:layout_marginLeft="@dimen/DIMEN_10DP"
                android:layout_marginRight="@dimen/DIMEN_10DP"
                android:ellipsize="end"
                android:maxLines="2">

                <include
                    android:id="@+id/tv_image_x"
                    layout="@layout/common_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_image_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/DIMEN_15DP"
                    android:layout_toLeftOf="@id/tv_image_x"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/common_blue"
                    android:textSize="@dimen/common_article_author"
                    tools:text="立即下载" />

                <TextView
                    android:id="@+id/tv_image_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/DIMEN_10DP"
                    android:layout_toLeftOf="@id/tv_image_type"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_article_author"
                    tools:text="迷彩青春 81评论" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
